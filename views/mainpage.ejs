  main ul {
    list-style: disc;
    margin: 16px 0;
    padding-left: 32px;
  }
  
  .notification-menu {
    position: relative;
    display: inline-block;
  }
  
  .notification-menu-content {
    display: none;
    position: absolute;
    z-index: 1;
    background-color: #fff;
    min-width: 200px;
    box-shadow: 0 0 4px rgba(0, 0, 0, 0.2);
    padding: 12px 16px;
    border-radius: 5px;
    top: 40px;
    right: 0;
  }
  
  .notification-menu:hover .notification-menu-content {
    display: block;
  }
  
  .notification {
    margin-bottom: 8px;
    padding: 8px;
    background-color: #f2f2f2;
    border-radius: 5px;
  }
  
  .notification a {
    color: #333;
    text-decoration: none;
    font-size: 16px;
    font-weight: bold;
  }
  
  .feedback {
    width: 100%;
    padding: 12px;
    margin-top: 16px;
    border-radius: 5px;
    border: 1px solid #ccc;
  }
  
  .submit-btn {
    padding: 12px 24px;
    background-color: #008000;
    color: #fff;
    border: none;
    border-radius: 5px;
    font-size: 16px;
    font-weight: bold;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }
  
  .submit-btn:hover {
    background-color: #006600;
  }
  
